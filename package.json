{
  "name": "livelyrics",
  "version": "1.0.12",
  "description": "A modern and responsive app for editing and displaying lyrics.",
  "main": "src/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickfouf/LiveLyrics.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "release": "dotenv -- electron-builder --publish always"
  },
  "keywords": [
    "electron",
    "nodejs",
    "lyrics"
  ],
  "author": "FOUFOPOULOS NIKOLAOS",
  "license": "ISC",
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bonjour-service": "^1.3.0",
    "dnm-font-manager": "^0.5.13",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8",
    "extract-zip": "^2.0.1",
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.yourname.livelyrics",
    "productName": "LiveLyrics",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "!src/main/build/**/*",
      "package.json"
    ],
    "win": {
      "icon": "src/renderer/assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "icon": "src/renderer/assets/icon.ico",
      "target": "dmg"
    },
    "linux": {
      "icon": "src/renderer/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "fileAssociations": [
      {
        "ext": "lyx",
        "name": "LiveLyrics Project",
        "description": "A project file for the LiveLyrics application.",
        "icon": "src/renderer/assets/icon.ico",
        "role": "Editor"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "nickfouf",
        "repo": "LiveLyrics",
        "releaseType": "release"
      }
    ]
  },
  "npmSkipDevDependencies": true
}
